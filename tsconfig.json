{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "lib": ["ESNext"],
        "strict": true,
        "outDir": "dist",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "exactOptionalPropertyTypes": true,
        "declarationMap": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": ["lib"]
}